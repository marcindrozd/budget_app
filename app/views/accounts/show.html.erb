<h1>Displaying Account <%= @account.name %></h1>

<h2><%= @display_month %></h2>
<%= form_tag("/accounts/#{@account.id}", method: "get") do %>
  <%= label_tag(:change_month, "Select Month") %>
  <%= select_tag(:change_month, options_for_select(months_array)) %>
  <%= submit_tag("Change Month") %>
<% end %>


Total monthly amount available: <strong><%= @account.total %></strong>
<%= link_to 'Edit monthly amount', edit_account_path(@account) %>
<br/>

<h3>List of monthly expenses</h3>

<ul>
<% @expenses.each do |expense| %>
  <li><%= "#{expense.name} - #{expense.amount} - #{expense.due_date.day}/#{expense.due_date.mon}" %> [<%= link_to 'Edit', edit_account_expense_path(@account, expense) %>]</li>
<% end %>
</ul>

<%= link_to 'Add expense', new_account_expense_path(@account) %>
