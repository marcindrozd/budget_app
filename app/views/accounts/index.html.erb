<h1>Welcome!</h1>

<% if logged_in? %>
  <h1>List of accounts</h1>
  <%= link_to "Logout", logout_path, method: :delete, data: { confirm: "Are you sure?" } %><br />

  <% @accounts.each do |account| %>
    <%= link_to account.name, account_path(account) %> [<%= link_to "Edit", edit_account_path(account) %>]
    <br />
  <% end %>

  <%= link_to "New Account", new_account_path %>
<% end %>