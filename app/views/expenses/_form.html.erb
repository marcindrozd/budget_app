<%= bootstrap_form_for [@account, @expense], as: :expense_form, layout: :horizontal, label_col: "col-sm-2 col-sm-offset-1", control_col: "col-sm-6" do |f| %>
  <%= f.text_field :name %>
  <%= f.date_field :due_date, label: "Due day" %>
  <%= f.text_field :amount %>
  <%= f.select :recurrence, options_for_select(recurrence_array), {}, { class: "selectpicker col-sm-3"} %>
  <%= f.submit %>
<% end %>

